<Window x:Class="Lab2.ListaConductor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="ListaConductor" Height="450" Width="800">
    <Grid>
        <ListView Name="DatosConductorListView" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="150" DisplayMemberBinding="{Binding Nombre}"/>
                    <GridViewColumn Header="Licencia" Width="100" DisplayMemberBinding="{Binding Licencia}"/>
                    <GridViewColumn Header="Teléfono" Width="100" DisplayMemberBinding="{Binding Telefono}"/>
                    <GridViewColumn Header="Vehículo" Width="150" DisplayMemberBinding="{Binding Vehiculo}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
