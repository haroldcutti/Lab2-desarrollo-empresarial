<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <!-- Operaciones -->
            <MenuItem Header="_Operaciones">
                <MenuItem Header="_Ingresos"/>
                <MenuItem Header="_Salida" Click="MenuItem_Salida_Click"/>
            </MenuItem>

            <!-- Mantenimientos -->
            <MenuItem Header="_Mantenimientos">
                <MenuItem Header="_Conductores" Click="MenuItem_Conductores_Click"/>
                <MenuItem Header="_Transportistas"/>
                <MenuItem Header="_Camiones" Click="MenuItem_Camiones_Click"/>
                <MenuItem Header="_Productos"/>
            </MenuItem>

            <!-- Reportes -->
            <MenuItem Header="_Reportes">
                <MenuItem Header="_Cargas"/>
                <MenuItem Header="_Ingresos"/>
                <MenuItem Header="_Salidas" Click="MenuItem_Salidas_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
