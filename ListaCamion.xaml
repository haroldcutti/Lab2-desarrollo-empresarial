<Window x:Class="Lab2.ListaCamion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="ListaCamion" Height="450" Width="800">
    <Grid>
        <ListView Name="DatosListView" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Peso Máximo" Width="100" DisplayMemberBinding="{Binding PesoMaximo}"/>
                    <GridViewColumn Header="Placa" Width="100" DisplayMemberBinding="{Binding Placa}"/>
                    <GridViewColumn Header="Peso Vacío" Width="100" DisplayMemberBinding="{Binding PesoVacio}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
